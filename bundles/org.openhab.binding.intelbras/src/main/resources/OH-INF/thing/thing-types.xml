<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="intelbras"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="dvr">

		<label>Intelbras DVR</label>
		<description>Intelbras DVR bridge</description>

		<properties>
			<property name="vendor">Intelbras</property>
		</properties>

		<config-description>
			<parameter name="baseURL" type="text" required="true">
				<label>Base URL</label>
				<description>Base URL to the DVR (ie: http://192.168.1.108)</description>
			</parameter>
			<parameter name="username" type="text" required="true">
				<label>Username</label>
				<description>Username of the account at the DVR</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Password of the account at the DVR</description>
			</parameter>
			<parameter name="authMode" type="text" required="false">
				<default>DIGEST</default>
				<label>Authentication Mode</label>
				<description>DIGEST or BASIC</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" required="false">
				<default>60</default>
				<label>General Refresh Interval</label>
				<description>Interval in SECONDS in which the fields will be refreshed, 0 means it will never refresh</description>
			</parameter>
		</config-description>
	</bridge-type>

	<thing-type id="channel" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="dvr"/>
		</supported-bridge-type-refs>

		<label>DVR Channel</label>
		<description>A channel of the DVR.</description>

		<channels>
			<channel id="title" typeId="title"/>
			<channel id="snapshot" typeId="snapshot"/>
			<channel id="recordMode" typeId="recordMode"/>
		</channels>

		<config-description>
			<parameter name="id" type="integer" required="true">
				<label>Channel</label>
				<description>Numeric ID of the channel, starting from 1</description>
			</parameter>
			<parameter name="snapshotRefreshInterval" type="integer" required="false">
				<default>0</default>
				<label>Snapshot Refresh Interval</label>
				<description>Interval in SECONDS in which the snapshot will be refreshed, 0 means it will never refresh</description>
			</parameter>
		</config-description>
	</thing-type>

	<channel-type id="title">
		<item-type>String</item-type>
		<label>Title</label>
		<description>Title of tyhe channel.</description>
	</channel-type>

	<channel-type id="snapshot">
		<item-type>Image</item-type>
		<label>Snapshot</label>
		<description>Snapshot image of the camera.</description>
	</channel-type>

	<channel-type id="recordMode">
		<item-type>Number</item-type>
		<label>Record Mode</label>
		<description>Record mode of tyhe channel.</description>
		<state readOnly="false">
			<options>
				<option value="0">Agenda</option>
				<option value="1">Manual</option>
				<option value="2">Parar</option>
			</options>
		</state>
	</channel-type>

</thing:thing-descriptions>
